{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
  },
  "include": [ "src/**/*.ts*" ],
  "exclude": [
    "node_modules",
  ],
  "references": []
}
